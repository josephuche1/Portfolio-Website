<%- include("partials/header.ejs") %>

   <section id="hero">
    <div class="container col-xxl-8 px-4 py-5">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
          <div class="col-10 col-sm-8 col-lg-6">
            <img src="images/Joseph-Uche_Photo.jpg" class="d-block mx-lg-auto img-fluid" alt="Profile Picture" width="700" height="500" loading="lazy">
          </div>
          <div class="col-lg-6">
            <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Hi, I'm Joseph</h1>
            <p class="lead">Dedicated computer science student with a strong foundation in programming and software development. Proficient in C++, C#, Python, and web development technologies. Experienced in tutoring and fostering student success. Adept at creating responsive web applications and Windows form programs.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a href="#"><button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Resume</button></a>
              <% if(locals.admin){ %>
                <a href="/admin/project"><button type="button" class="btn btn-outline-secondary btn-lg px-4">Add new project</button></a>
              <% } %>
              
            </div>
          </div>
        </div>
      </div>
   </section>
   <section id="projects">
    <div class="album py-5 bg-body-tertiary">
     <h2 class="fw-bolder text-center fs-1 mb-3">Projects</h2>
     <div class="container">
           <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
               <% projects.forEach((project) => {%>
                 <div class="col">
                    <div class="card shadow-sm">
                      <img src="/images/<%= project.imageName %>" width="100%" height="225" alt="...">
                      <div class="card-body">
                          <p class="fw-bolder fs-5"><%= project.title %></p>
                          <p class="card-text"><%= project.description %></p>
                          <div class="d-flex justify-content-between align-items-center">
                             <div class="btn-group">
                                 <a href="/view/<%= locals.admin %>/<%= project._id %>" class="btn btn-sm btn-outline-secondary text-decoration-none">View</a>
                                 <a href="/admin/project/<%= project._id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                              </div>
                              <small class="text-body-secondary"><%= project.completed %></small>
                          </div>
                       </div>
                    </div>
                 </div>
               <% }) %>
           </div>
      </div>
    </div>
   </section>

   <section id="footer">
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4">
          <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
              <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
            </a>
            <span class="mb-3 mb-md-0 text-body-secondary">Back to Top</span>
          </div>
      
          <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
            <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
            <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
          </ul>
        </footer>
      </div>
   </section>

   <%- include("partials/footer.ejs") %>
